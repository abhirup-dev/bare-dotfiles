{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    // make sure you have installed commandLineTools
                    "extraArgs": [
                        "-std=c++17"
                    ]
                }
            }
        }
    },
    "python.jediPath": "/home/abhirup/.local/lib/python3.5/site-packages"
    }
